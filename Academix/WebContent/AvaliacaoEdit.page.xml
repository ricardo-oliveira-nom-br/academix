<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd"
	no-conversation-view-id="/AvaliacaoList.xhtml" login-required="true">

	<begin-conversation join="true" />

	<action execute="#{avaliacaoHome.wire}" />

	<param name="avaliacaoIdtAvaliacao"
		value="#{avaliacaoHome.avaliacaoIdtAvaliacao}" />

	<navigation from-action="#{avaliacaoHome.preparePersist}">
		<end-conversation />
		<redirect view-id="/Avaliacao.xhtml" />
	</navigation>

	<navigation from-action="#{avaliacaoHome.prepareUpdate}">
		<end-conversation />
		<redirect view-id="/Avaliacao.xhtml" />
	</navigation>

	<navigation from-action="#{avaliacaoHome.remove}">
		<end-conversation />
		<redirect view-id="/AvaliacaoList.xhtml" />
	</navigation>

	<restrict>
		#{identity.loggedIn and (s:hasRole("professor") or
		s:hasRole("admin"))}
	</restrict>

</page>
