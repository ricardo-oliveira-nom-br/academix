<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd"
	no-conversation-view-id="/LocalizacaoList.xhtml"
	login-required="true">

	<begin-conversation join="true" />

	<action execute="#{localizacaoHome.wire}" />

	<param name="localizacaoFrom" />
	<param name="localizacaoIdtLocalizacao"
		value="#{localizacaoHome.localizacaoIdtLocalizacao}" />

	<navigation from-action="#{localizacaoHome.persist}">
		<end-conversation />
		<redirect view-id="/Localizacao.xhtml" />
	</navigation>

	<navigation from-action="#{localizacaoHome.update}">
		<end-conversation />
		<redirect view-id="/Localizacao.xhtml" />
	</navigation>

	<navigation from-action="#{localizacaoHome.remove}">
		<end-conversation />
		<redirect view-id="/LocalizacaoList.xhtml" />
	</navigation>

	<restrict>
		#{identity.loggedIn and (s:hasRole("admin") or
		s:hasRole("secretaria"))}
	</restrict>

</page>
