<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd"
	no-conversation-view-id="/ProfessorList.xhtml" login-required="true">

	<begin-conversation join="true" />

	<action execute="#{professorHome.wire}" />

	<param name="professorFrom" />
	<param name="professorIdtProfessor"
		value="#{professorHome.professorIdtProfessor}" />
	<param name="enderecoFrom" />
	<param name="enderecoIdtCep" value="#{enderecoHome.enderecoIdtCep}" />

	<navigation from-action="#{professorHome.persist}">
		<end-conversation />
		<redirect view-id="/Professor.xhtml" />
	</navigation>

	<navigation from-action="#{professorHome.update}">
		<end-conversation />
		<redirect view-id="/Professor.xhtml" />
	</navigation>

	<navigation from-action="#{professorHome.remove}">
		<end-conversation />
		<redirect view-id="/ProfessorList.xhtml" />
	</navigation>

	<restrict>
		#{identity.loggedIn and (s:hasRole("admin") or
		s:hasRole("secretaria"))}
	</restrict>

</page>
